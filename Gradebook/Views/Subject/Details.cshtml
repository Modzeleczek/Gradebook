@model Gradebook.Models.Subject
@{
    var D = Gradebook.Utils.LocalizedStrings.Subject.Create[ViewBag.LanguageId];
    ViewBag.Title = D["Subject details"];
    ViewBag.Title = "Subject details";
    var files = (ICollection<Gradebook.Models.File>)ViewBag.Files;
}

<h2>@ViewBag.Title</h2>

<dl class="dl-horizontal">
    <dt>
        Name
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt>
        Syllabus
    </dt>
    <dd>
        @if (Model.Syllabus != null)
        {
            @Html.ActionLink(D["Download"], "DownloadSyllabus", new { id = Model.Id })
        }
        else
        {
            @:Syllabus was not uploaded.
        }
    </dd>
</dl>

@if (User.IsInRole(Gradebook.Utils.Role.Teacher) || User.IsInRole(Gradebook.Utils.Role.Student))
{
    <h4>Files</h4>
    if (files.Count > 0)
    {
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Modification time
                </th>
                @if (User.IsInRole(Gradebook.Utils.Role.Teacher))
                {
                    <th></th>
                }
            </tr>

            @foreach (var item in files)
            {
                <tr>
                    <td>
                        @Html.ActionLink(D["Name"], "DownloadFile", new { id = item.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModificationTime)
                    </td>
                    @if (User.IsInRole(Gradebook.Utils.Role.Teacher))
                    {
                        <td>
                            @Html.ActionLink(D["Delete"], "DeleteFile", new { id = item.Id })
                        </td>
                    }
                </tr>
            }
        </table>
    }
    else
    {
        @:No files.
        <br />
    }
}

@if (User.IsInRole(Gradebook.Utils.Role.Teacher))
{
    @Html.ActionLink("Add file", "AddFile", new { id = Model.Id })
    <br />
}

@Html.ActionLink("Back", "Index")
