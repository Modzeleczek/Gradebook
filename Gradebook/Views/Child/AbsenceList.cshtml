@model IEnumerable<Gradebook.Models.Absence>
@using Gradebook.Utils;
@{
    LocalizedStrings.LanguageDictionary D = LocalizedStrings.Child.AbsenceList[ViewBag.LanguageId];
    ViewBag.Title = D["Absence list"];
}

<h2>@ViewBag.Title</h2>

@if (Model.Count() > 0)
{
    <table class="list-table">
        <thead>
        <tr>
            <th>
                @D["Date"]
            </th>
            <th>
                @D["Lesson number"]
            </th>
            <th>
                @D["Is justified?"]
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonNumber)
                </td>
                <td>
                    @(item.IsJustified == true ? D["yes"] : D["no"])
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    @D["No absences"]
    <br />
}

@Html.ActionLink(D["Back"], "Index")
