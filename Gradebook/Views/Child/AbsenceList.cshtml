@model IEnumerable<Gradebook.Models.Absence>
@{
    ViewBag.Title = "Absence list";
}

<h2>@ViewBag.Title</h2>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                Date
            </th>
            <th>
                Lesson number
            </th>
            <th>
                Is justified?
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonNumber)
                </td>
                <td>
                    @(item.IsJustified == true ? "yes" : "no")
                </td>
            </tr>
        }
    </table>
}
else
{
    @:No absences
    <br />
}

@Html.ActionLink("Back", "Index")
