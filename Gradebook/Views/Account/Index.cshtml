@model IEnumerable<Gradebook.Controllers.AccountController.RoleUsers>
@{
    ViewBag.Title = "Accounts";
}

<h2>@ViewBag.Title</h2>

@Html.ActionLink("Create New", "Create")

@foreach (var roleUsers in Model)
{
    <h4>@roleUsers.RoleName</h4>
    if (roleUsers.Users.Count == 0)
    {
        @:No accounts
        <br />
    }
    else
    {
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Email
            </th>
            <th>
                Phone number
            </th>
            <th></th>
        </tr>
        @foreach (var item in roleUsers.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Reset password", "AdminResetPassword", new { id = item.Id })
                    @*@Html.ActionLink("Delete", "Delete", new { id=item.User.Id })*@
                </td>
            </tr>
        }
    </table>
    }
}
