@model IEnumerable<Gradebook.Models.GlobalAnnouncement>
@{
    var D = Gradebook.Utils.LocalizedStrings.GlobalAnnouncement.Index[ViewBag.LanguageId];
    ViewBag.Title = D["Announcements"];
}

<h2>@ViewBag.Title</h2>

@if (User.IsInRole(Gradebook.Utils.Role.Administrator))
{
    @Html.ActionLink(D["Create new"], "Create")
    <br />
}
@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @D["Modification time"]
        </th>
        <th>
            @D["Content"]
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModificationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
            @if (User.IsInRole(Gradebook.Utils.Role.Administrator))
            {
                @Html.ActionLink(D["Edit"], "Edit", new { id = item.Id })@: |
            }
            @Html.ActionLink(D["Details"], "Details", new { id = item.Id })
            @if (User.IsInRole(Gradebook.Utils.Role.Administrator))
            {
                @:| @Html.ActionLink(D["Delete"], "Delete", new { id = item.Id })
            }
            </td>
        </tr>
    }
</table>
}
else
{
    @D["No announcements"]
}
