@model IEnumerable<Gradebook.Models.GlobalAnnouncement>
@using Gradebook.Utils;
@{
    LocalizedStrings.LanguageDictionary D = LocalizedStrings.GlobalAnnouncement.Index[ViewBag.LanguageId];
    ViewBag.Title = D["Announcements"];
}

<h2>@ViewBag.Title</h2>

<table class="list-table">
    <thead>
        <tr>
            <th>
                @D["Modification time"]
            </th>
            <th>
                @D["Content"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModificationTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.ActionLink(D["Details"], "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">@D["No announcements"]</td>
            </tr>
        }
    </tbody>
</table>
