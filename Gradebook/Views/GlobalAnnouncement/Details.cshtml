@model Gradebook.Models.GlobalAnnouncement
@{
    var D = Gradebook.Utils.LocalizedStrings.GlobalAnnouncement.Details[ViewBag.LanguageId];
    ViewBag.Title = D["Announcement details"];
}

<h2>@ViewBag.Title</h2>

<div>
    <dl class="dl-horizontal">

        <dt>
            @D["Author name"]
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.ApplicationUser.Name)
        </dd>

        <dt>
            @D["Author surname"]
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.ApplicationUser.Surname)
        </dd>

        <dt>
            @D["Modification time"]
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModificationTime)
        </dd>

        <dt>
            @D["Content"]
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(D["Back"], "Index")
</p>
