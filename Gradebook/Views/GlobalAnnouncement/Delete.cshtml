@model Gradebook.Models.GlobalAnnouncement
@{
    var D = Gradebook.Utils.LocalizedStrings.GlobalAnnouncement.Delete[ViewBag.LanguageId];
    ViewBag.Title = D["Delete"];
}

<h2>@ViewBag.Title</h2>

<h3>@D["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@D["Global announcement"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @D["Modification Time"])
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModificationTime)
        </dd>

        <dt>
            @D["Content"])
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink(D["Back to List"], "Index")
        </div>
    }
</div>
