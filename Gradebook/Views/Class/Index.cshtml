@model IEnumerable<Gradebook.Models.Class>
@{
    var D = Gradebook.Utils.LocalizedStrings.Class.Index[ViewBag.LanguageId];
    ViewBag.Title = D["Classes"];
}

<h2>@ViewBag.Title</h2>

@if (User.IsInRole(Gradebook.Utils.Role.Administrator))
{
    @Html.ActionLink("Create New", "Create")
}
<table class="table">
    <tr>
        <th>
            @D["Supervisor name"]
        </th>
        <th>
            @D["Supervisor surname"]
        </th>
        <th>
            @D["Year"]
        </th>
        <th>
            @D["Unit"]
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor.ApplicationUser.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor.ApplicationUser.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @if (User.IsInRole(Gradebook.Utils.Role.Administrator))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @:|
                }
                @Html.ActionLink(D["Details"], "Details", new { id = item.Id })
                @if (User.IsInRole(Gradebook.Utils.Role.Administrator))
                {
                    @:| @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
