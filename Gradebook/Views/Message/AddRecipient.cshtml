@{
    ViewBag.Title = "Add recipient";
    var recipients = (ICollection<SelectListItem>)ViewBag.Recipients;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddRecipient", "Message", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("User", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("userId", recipients, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "Create")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
