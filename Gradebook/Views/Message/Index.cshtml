@model Gradebook.Models.Message
@{
    var D = Gradebook.Utils.LocalizedStrings.Message.Index[ViewBag.LanguageId];
    ViewBag.Title = D["Messages"];
    var received = (ICollection<Gradebook.Models.Message>)ViewBag.Received;
    var sent = (ICollection<Gradebook.Models.Message>)ViewBag.Sent;
}

<h2>@ViewBag.Title</h2>

<h3>@D["Received"]</h3>
@if (received.Count > 0)
{
    <table class="table">
        <tr>
            <th>
                @D["Time"]
            </th>
            <th>
                @D["Content"]
            </th>
            <th>
                @D["Sender name"]
            </th>
            <th>
                @D["Sender surname"]
            </th>
            <th>
                @D["Sender email"]
            </th>
            <th></th>
        </tr>
        @foreach (var item in received)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SendTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sender.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sender.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sender.Email)
                </td>
                <td>
                    @Html.ActionLink(D["Details"], "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}
else
{
    @D["No received messages"]
}

<h3>@D["Sent"]</h3>
@if (sent.Count > 0)
{
<table class="table">
    <tr>
        <th>
            @D["Time"]
        </th>
        <th>
            @D["Content"]
        </th>
        <th></th>
    </tr>
    @foreach (var item in sent)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SendTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink(D["Details"], "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>
}
else
{
    @D["No sent messages"]
    <br />
}

@Html.ActionLink(D["Write new"], "Create")
