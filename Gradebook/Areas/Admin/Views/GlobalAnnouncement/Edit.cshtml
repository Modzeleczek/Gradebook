@model Gradebook.Models.GlobalAnnouncement
@using Gradebook.Utils;
@{
    LocalizedStrings.LanguageDictionary D = LocalizedStrings.GlobalAnnouncement.Edit[ViewBag.LanguageId];
    ViewBag.Title = D["Edit announcement"];
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="alert alert-danger">@ViewBag.ValidationMessage</div>
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Content, D["Content"], htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Content, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@D["Save"]" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@Html.ActionLink(D["Back"], "List", null, new { @class = "btn btn-default" })
