@model IEnumerable<Gradebook.Models.Class>
@using Gradebook.Utils;
@{
    LocalizedStrings.LanguageDictionary D = LocalizedStrings.Class.List_[ViewBag.LanguageId];
    ViewBag.Title = D["Classes"];
}

<h2>@ViewBag.Title</h2>

<table class="list-table">
    <thead>
    <tr>
        <th>
            @D["Supervisor name"]
        </th>
        <th>
            @D["Supervisor surname"]
        </th>
        <th>
            @D["Year"]
        </th>
        <th>
            @D["Unit"]
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Supervisor.ApplicationUser.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Supervisor.ApplicationUser.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.ActionLink(D["Edit"], "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink(D["Details"], "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink(D["Delete"], "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">@D["No classes"]</td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink(D["Add"], "Create", null, new { @class = "btn btn-default" })
